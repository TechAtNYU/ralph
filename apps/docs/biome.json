{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
  "root": false,
  "extends": "//",
  "files": {
    "ignoreUnknown": true,
    "includes": ["**", "!node_modules", "!.source", "!src/routeTree.gen.ts"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "domains": {
      "react": "recommended"
    }
  },
  "overrides": [
    {
      "includes": ["src/routes/index.tsx"],
      "linter": {
        "rules": {
          "security": {
            "noDangerouslySetInnerHtml": "off"
          }
        }
      }
    }
  ],
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  }
}
